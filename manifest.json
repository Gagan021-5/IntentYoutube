{
  "manifest_version": 3,
  "name": "IntentYoutube",
  "version": "1.0",
  "description": "Watch YouTube with intent by controlling recommendations, shorts, and distractions without affecting the video you choose.",
  "permissions": ["tabs"],

  "icons": {
    "16": "icons/iconbig.png",
    "48": "icons/iconbigger.png",
    "128": "icons/iconbiggest.png"
  },

  "action": {
    "default_popup": "dist/index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
